<script>
    $(document).ready(function () {

        $('#btnSubmit').click(function () {
            debugger;
            if ($('#loan_document').val() == '') {
                alert('Please select file');
                return;
            }
            var formData = new FormData();
            var file = $('#loan_document')[0];
            formData.append('file', file.files[0]);
            $.ajax({
                url: 'https://localhost:44306/api/FileUpload',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (d) {
                    $("#status").html("<span>File uploaded here: <a class='text-success' href=" + d + ">Open File</a></span>");
                    $('#loan_document').val(null);
                },
                error: function () {
                    alert("Faild please try upload again");
                }
            });
        });
    });
</script>









